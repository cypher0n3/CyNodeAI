FROM golang:1.25-alpine AS build

WORKDIR /src
RUN apk add --no-cache ca-certificates git

ENV CGO_ENABLED=0

COPY . .

RUN go build -o /out/api-egress ./orchestrator/api_egress/cmd/api-egress

FROM alpine:3.20
RUN apk add --no-cache ca-certificates

WORKDIR /app
COPY --from=build /out/api-egress /app/api-egress

EXPOSE 8084
ENTRYPOINT ["/app/api-egress"]
